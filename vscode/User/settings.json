// Place your settings in this file to overwrite the default settings
{
    "workbench.editor.showTabs": true,
    // editor
    "editor.roundedSelection": false,
    "editor.renderWhitespace": "boundary",
    "editor.detectIndentation": true,
    "editor.renderIndentGuides": true,
    "editor.folding": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.formatOnType": true,
    "editor.wrappingColumn": -1,
    "editor.mouseWheelZoom": false,
    "window.openFilesInNewWindow": false,
    "window.restoreFullscreen": true,
    "window.zoomLevel": 1,
    "editor.selectionHighlight": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.openEditors.visible": 99,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "go.formatTool": "goimports",
    "go.formatOnSave": true,
    "go.vetOnSave": false,
    "go.docsTool": "gogetdoc",
    "window.titleBarStyle": "native",
    // "go.lintTool": "gometalinter",
    // "go.lintFlags": [
    //     "--disable=gas",
    //     "--disable=dupl",
    //     "--disable=gocyclo",
    //     "--enable=unused",
    //     "--enable=misspell"],
    "numberedBookmarks.saveBookmarksBetweenSessions": true,
    "numberedBookmarks.useStickyBookmarks": true,
    "bookmarks.saveBookmarksBetweenSessions": true,
    "bookmarks.useStickyBookmarks": true,
    "window.fullScreenZenMode": false
}
